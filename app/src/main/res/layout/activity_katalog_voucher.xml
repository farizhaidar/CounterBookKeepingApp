<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:clickable="true"
    android:padding="16dp">

    <!-- Card View for Voucher -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTelkomsel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:padding="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivTelkomsel"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/telkomsel"
                android:contentDescription="Voucher"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telkomsel"
                android:textSize="18sp"
                android:textColor="#3E3E3E"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card View for Kartu Perdana -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardXL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"

        app:cardElevation="4dp"
        android:layout_below="@id/cardTelkomsel"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivXL"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/xl"
                android:contentDescription="Kartu Perdana" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XL"
                android:textSize="18sp"
                android:textColor="#3E3E3E"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card View for Aksesoris -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardIndosat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:cardElevation="4dp"
        android:layout_below="@id/cardXL"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivIndosat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/indosat"
                android:contentDescription="Aksesoris" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indosat"
                android:textSize="18sp"
                android:textColor="#3E3E3E"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:cardElevation="4dp"
        android:layout_below="@id/cardIndosat"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivAxis"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/axis"
                android:contentDescription="Aksesoris" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Axis"
                android:textSize="18sp"
                android:textColor="#3E3E3E"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:cardElevation="4dp"
        android:layout_below="@id/cardAxis"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivTri"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/tri"
                android:contentDescription="Aksesoris" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tri"
                android:textSize="18sp"
                android:textColor="#3E3E3E"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSmartfren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:cardElevation="4dp"
        android:layout_below="@id/cardTri"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivSmartfren"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/smartfren"
                android:contentDescription="Aksesoris" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smartfren"
                android:textSize="18sp"
                android:textColor="#3E3E3E"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>    <androidx.cardview.widget.CardView
        android:id="@+id/cardByu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:cardElevation="4dp"
        android:layout_below="@id/cardSmartfren"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivByu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/byu"
                android:contentDescription="Aksesoris" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Byu"
                android:textSize="18sp"
                android:textColor="#3E3E3E"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
