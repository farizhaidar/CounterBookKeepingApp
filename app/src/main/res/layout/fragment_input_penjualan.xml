<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".InputPenjualanActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Penjualan"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF6200EE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Button Voucher -->
    <Button
        android:id="@+id/btnVoucher"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voucher"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF6200EE"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button Kartu Perdana -->
    <Button
        android:id="@+id/btnKartuPerdana"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kartu Perdana"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF6200EE"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnVoucher"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button Aksesoris -->
    <Button
        android:id="@+id/btnAksesoris"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aksesoris"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF6200EE"
        android:padding="16dp"
        android:elevation="4dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnKartuPerdana"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
