<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:clickable="true"
    android:padding="16dp">

    <!-- Header Title -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Penjualan"
        android:textSize="24sp"
        android:textColor="#3E3E3E"
        android:fontFamily="@font/poppinsbold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp" />

    <!-- Card View for Voucher -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:layout_below="@id/tvHeader"
        android:padding="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivVoucher"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_voucher"
                android:contentDescription="Voucher"
                app:tint="#FF5722" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher"
                android:textSize="18sp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card View for Kartu Perdana -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardKartuPerdana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"

        app:cardElevation="4dp"
        android:layout_below="@id/cardVoucher"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivKartuPerdana"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_sim_card"
                android:contentDescription="Kartu Perdana" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kartu Perdana"
                android:textSize="18sp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card View for Aksesoris -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAksesoris"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        app:cardElevation="4dp"
        android:layout_below="@id/cardKartuPerdana"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivAksesoris"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_headphones"
                android:contentDescription="Aksesoris" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aksesoris"
                android:textSize="18sp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
