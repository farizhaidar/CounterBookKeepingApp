<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Kontainer Teks -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nama Produk -->
            <TextView
                android:id="@+id/tvKatalogName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Produk"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Harga Jual -->
            <TextView
                android:id="@+id/tvKatalogSellingPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Jual: Rp0"
                android:textSize="14sp"
                android:layout_marginBottom="2dp" />

            <!-- Harga Modal -->
            <TextView
                android:id="@+id/tvKatalogCostPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harga Modal: Rp0"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Ikon Edit dan Hapus -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Ikon Edit -->
            <ImageView
                android:id="@+id/ivEditKatalog"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_edit_24"
                android:contentDescription="Edit"
                android:layout_marginBottom="8dp" />

            <!-- Ikon Hapus -->
            <ImageView
                android:id="@+id/ivDeleteKatalog"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_delete"
                android:contentDescription="Delete" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
